<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/notes_ic_view"
        android:layout_width="43dp"
        android:layout_height="43dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@raw/pinned_icon"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/notes_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9.75dp"
        android:text="MEETING"
        android:textColor="#1A1A1A"
        android:textSize="16sp"
        android:fontFamily="@font/muli_bold"
        app:layout_constraintLeft_toRightOf="@id/notes_ic_view"
        app:layout_constraintTop_toTopOf="@id/notes_ic_view" />

    <TextView
        android:id="@+id/notes_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="07:30 AM"
        android:textSize="10.49sp"
        app:fontFamily="@font/poppins"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="@id/notes_txt"
        app:layout_constraintTop_toBottomOf="@id/notes_txt" />

    <TextView
        android:id="@+id/notes_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02/02/2020"
        android:textSize="10.49sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toLeftOf="@id/detail_info_img"
        app:fontFamily="@font/poppins"
        app:layout_constraintTop_toTopOf="@id/detail_info_img" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#c0c0c0"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/notes_ic_view"/>

    <ImageView
        android:id="@+id/detail_info_img"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@raw/detail_info"
        />


</androidx.constraintlayout.widget.ConstraintLayout>