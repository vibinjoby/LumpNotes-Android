<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground">


    <ImageView
        android:id="@+id/category_ic_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/curved_view"/>
    <Button
        android:id="@+id/menuBtn"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/category_ic_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@id/category_ic_border"
        app:layout_constraintStart_toStartOf="@id/category_ic_border"
        app:layout_constraintEnd_toEndOf="@id/category_ic_border"
        android:background="@drawable/category_ic_view"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/category_ic_view"
        app:layout_constraintBottom_toBottomOf="@id/category_ic_view"
        app:layout_constraintLeft_toLeftOf="@id/category_ic_view"
        app:layout_constraintRight_toRightOf="@id/category_ic_view"
        android:background="@drawable/home"/>

    <TextView
        android:id="@+id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heart Green"
        android:textColor="#4B4B4B"
        android:textSize="12sp"
        app:fontFamily="@font/helvetica_neue_medium"
        app:layout_constraintEnd_toEndOf="@id/category_ic_border"
        app:layout_constraintStart_toStartOf="@id/category_ic_border"
        app:layout_constraintTop_toBottomOf="@id/category_ic_view" />

    <TextView
        android:id="@+id/category_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02/01/2020"
        android:textColor="#B2B2B2"
        android:textSize="9sp"
        app:fontFamily="@font/helvetica_neue_light"
        app:layout_constraintEnd_toEndOf="@id/category_ic_border"
        app:layout_constraintStart_toStartOf="@id/category_ic_border"
        app:layout_constraintTop_toBottomOf="@id/category_name" />

</androidx.constraintlayout.widget.ConstraintLayout>