<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curved_view">

    <TextView android:id="@+id/category_header_txt"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD NEW CATEGORY"
        android:fontFamily="@font/helvetica_neu_bold"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20dp"/>
<EditText
    android:id="@+id/new_category"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:paddingLeft="10dp"
    android:layout_marginRight="20dp"
    android:textColor="@color/app_theme_color"
    android:background="@drawable/search_bar_slightly_curved"/>

    <GridView
        android:id="@+id/icon_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:numColumns="5"
        android:verticalSpacing="8dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica_neu_bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="CANCEL"/>

        <Button
            android:id="@+id/doneBtn"
            android:layout_gravity="right"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/helvetica_neu_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="DONE"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>