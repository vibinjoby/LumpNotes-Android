<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/choose_category_ic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/rounded_ctgry_view"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ctrgy_ic_1"/>

    <TextView
        android:id="@+id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/muli_bold"
        android:layout_marginLeft="20dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintLeft_toRightOf="@id/choose_category_ic"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/num_notes_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4D4D4D"
        android:textSize="12dp"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toBottomOf="@id/category_name"
        app:layout_constraintLeft_toLeftOf="@id/category_name"
        android:text="0 Notes"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        app:layout_constraintTop_toBottomOf="@id/num_notes_txt"
        android:background="#A7A7A7"
        android:layout_marginTop="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>