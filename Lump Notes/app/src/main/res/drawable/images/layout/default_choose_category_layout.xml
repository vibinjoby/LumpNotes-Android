<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:layout_width="132dp"
        android:layout_height="123dp"
        android:src="@raw/default_choose_category"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You haven’t created any category yet"
        android:textColor="#969393"
        android:textSize="14dp"
        android:fontFamily="@font/helvetica_neu_bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="2"
        android:text="Tap “+” button below to create a new category."
        android:textColor="#969393"
        android:textSize="14dp"/>

</LinearLayout>